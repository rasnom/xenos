<%= form_for :item do |f| %>
	
	<% if @item.errors.any? %>
		<div class='error'>
			<h2>
				<%= pluralize(@item.errors.count, "error") %>
				prevented this item from being saved:
			</h2>
			<ul>
				<% @item.errors.full_messages.each do |msg| %>
					<li> <%= msg %> </li>
				<% end %>
			</ul>
		</div>
	<% end %>

	<div>
		<%= f.label :name %>
		<%= f.text_field :name %>
	</div>
	<div>
		<%= f.label :ingredients %>
		<%= f.text_field :ingredients %>
	</div>
	<div>
		<%= f.label :description %>
		<%= f.text_area :description %>
	</div>
	<div>
		<%= f.label :category_id %>	
		<%= f.text_field :category_id %>	
	</div>
	<div>
		<%= f.label :price %>
		<%= f.text_field :price %>
	</div>
	<div>
		<%= f.submit %>
	</div>

<% end %>